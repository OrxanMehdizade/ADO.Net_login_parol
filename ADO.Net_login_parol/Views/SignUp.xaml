<UserControl x:Class="ADO.Net_login_parol.Views.SignUp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ADO.Net_login_parol.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" d:Background="White">
    <Grid Background="#00a884">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="500" Height="350" Background="#00a884">
            
            
            <TextBox Name="LoginSignUp" Width="290" Height="50" Margin="20"  TextAlignment="Center" FontSize="25"><TextBox.ToolTip>Login</TextBox.ToolTip></TextBox>
            <TextBox Name="password1" Width="290" Height="50" Margin="20"  TextAlignment="Center" FontSize="25"><TextBox.ToolTip>Pasword</TextBox.ToolTip></TextBox>
            <TextBox Name="password2" Width="290" Height="50" Margin="20"  TextAlignment="Center" FontSize="25">
                <TextBox.ToolTip>Pasword</TextBox.ToolTip></TextBox>
            <Button Width="140" Height="40" Margin="15" FontSize="20" Foreground="White" Background="#00a884" BorderThickness="0" Content="Sign Up" Click="SignUpButton_Click"></Button>

        </StackPanel>

    </Grid>
</UserControl>
